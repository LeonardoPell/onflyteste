generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  expenses Expense[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  date        DateTime
  amount      Float
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}
